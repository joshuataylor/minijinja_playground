{% if error_message %}
    <div class="errors-wrapper">
        {% if error_kind == 'variables' %}
            <h2>Variables Error</h2>
        {% elif error_kind == 'minijinja' %}
            <h2>Minijinja Parsing Error</h2>
        {% endif %}

        <p>{{ error_message }}</p>
    </div>
{% else %}
<div class="overflow-hidden bg-white sm:rounded-lg sm:shadow">
    <div class="border-b border-gray-200 bg-white px-4 py-5 sm:px-6">
        <h3 class="text-lg font-medium leading-6 text-gray-900">Rendered Result</h3>
    </div>
    <pre class="p-5">{{ rendered }}</pre>
</div>

<div class="overflow-hidden bg-white sm:rounded-lg sm:shadow mt-5">
    <div class="border-b border-gray-200 bg-white px-4 py-5 sm:px-6">
        <h3 class="text-lg font-medium leading-6 text-gray-900">Stats</h3>
    </div>

    <div>
        <div class="mx-auto">
            <div>
                <dl class="grid grid-cols-1 divide-y divide-gray-200 overflow-hidden rounded-lg bg-white shadow md:grid-cols-3 md:divide-y-0 md:divide-x">
                    <div class="px-4 py-5 sm:p-6">
                        <dt class="text-base font-normal text-gray-900">Fuel Cost</dt>
                        <dd class="mt-1 flex items-baseline justify-between md:block lg:flex">
                            <div class="flex items-baseline text-2xl font-semibold text-indigo-600">{{ fuel_cost }}</div>
                        </dd>
                    </div>

                    <div class="px-4 py-5 sm:p-6">
                        <dt class="text-base font-normal text-gray-900">Rendering Time</dt>
                        <dd class="mt-1 flex items-baseline justify-between md:block lg:flex">
                            <div class="flex items-baseline text-2xl font-semibold text-indigo-600">{{ render_time }}</div>
                        </dd>
                    </div>
                </dl>
            </div>
        </div>
    </div>
</div>

<div class="overflow-hidden bg-white sm:rounded-lg sm:shadow mt-5">
    <div class="border-b border-gray-200 bg-white px-4 py-4 sm:px-6">
        <h3 class="text-lg font-medium leading-6 text-gray-900">Instructions</h3>
    </div>

    <div>
        <div class="instructions-wrapper w-full">
            <table class="min-w-full divide-y divide-gray-300">
                <thead class="bg-gray-50">
                    <tr>
                        <th scope="col" class="py-2 pl-4 pr-2 text-left text-xs font-medium uppercase tracking-wide text-gray-500 sm:pl-6">Line #</th>
                        <th scope="col" class="px-2 py-2 text-left text-xs font-medium uppercase tracking-wide text-gray-500">ID</th>
                        <th scope="col" class="px-2 py-2 text-left text-xs font-medium uppercase tracking-wide text-gray-500">Instruction</th>
                    </tr>
                </thead>

                <tbody class="divide-y divide-gray-200 bg-white">{{ instructions }}</tbody>
            </table>
        </div>
    </div>
</div>
{% endif %}
